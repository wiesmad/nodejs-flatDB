<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Users</title>
</head>
<body>

  <div class="site-title">
    <h1>Sample Users</h1>
    <h2><%= title %></h2>
    <h3>Total numbers of users <%= users.length %> </h3>
    <a href="/users/new">Add user</a>
    

    <% if (users.length > 0) { %>
      <p>Click on user name to show details</p>
      <% users.forEach(user => { %>
        <div class="userName">
          <p>Name: <a href="/users/<%= user.id %> "><%= user.username %></a></p>
        </div>
      <% }) %>
      <% } else { %>
        <p>There are no users in JSON file...</p>
      <% } %>
  </div>
 
  <script></script>

  <style>
    body {
      display: grid;
      grid-auto-flow: row;
      background-color: gray;
    }

    h1 {
      color: red;
    }

    .userName {
      width: 20%;
      min-width: 200px;
      padding: .5em 1em;
      background: greenyellow;
      border-radius: 10px;
    }

    .userName:not(last-of-type) {
      margin-bottom: 1em;
    }
  </style>
</body>
</html>